-title @idea.title


.col-md-2
  %h2 Автор
  = image_tag @idea.user.avatar.url(:medium), {class: "img-thumbnail img-responsive avatar", title: "#{@idea.user.fullname}"}
  %br
  %h2.show_user= @idea.user.fullname
  
.col-md-1
.col-md-9
  %h1.ideashow= @idea.title


  %blockquote
    = @idea.synopsis

  - if @images.any?  
    .fotorama{:"data-width" => '100%', :"data-height" => '800/450', :"data-maxwidth" => "800", :"data-maxheight" => "450", :"data-nav" => "thumbs", :"data-thumbwidth" => '80', :"data-thumbheight" => "80", :"data-allowfullscreen" => "true", :"data-fit" => "cover", :"data-transition" => "slide", :"data-clicktransition" => "crossfade", :"data-loop" => "true", :"data-keyboard" => "true"}
      - @images.each do |image|
        = image_tag image.url(:large)
    %br
    %br
  
  - unless @idea.links.blank?
    %h3 Видео  
    .fotorama{:"data-width" => '100%', :"data-height" => '800/450', :"data-maxwidth" => "800", :"data-maxheight" => "450", :"data-allowfullscreen" => "true", :"data-fit" => "cover"}
      = link_to '', @idea.links
    %br
    %br
 
  %br
  %h3= t(:problem, scope: "activerecord.attributes.idea")
  %p.pages= @idea.problem
  %h3= t(:background, scope: "activerecord.attributes.idea")
  %p.pages= @idea.background
  %h3= t(:solution, scope: "activerecord.attributes.idea")
  %p.pages= @idea.solution
  %br
  %hr
  =link_to "Все идеи", ideas_path, class: "input btn btn-primary"
