-title t(:sign_in)
.row.featured-boxes
  .col-md-8
    .featured-box.default
      .box-content
        %h4= t(:sign_in)
        = semantic_form_for @user, url: new_session_path(@user), :html => {:id => 'contactForm'} do |f|
          .row
            = f.inputs do
              .form-group
                .col-md-12
                  = f.input :login, :label => t(:name, scope: "activerecord.attributes.user"), autofocus: true, :input_html => {:class => "form-control"}, :required => false, placeholder: "username или email"
              .form-group
                .col-md-12    
                  = f.input :password, :label => t(:password, scope: "activerecord.attributes.user"), autofocus: true, :input_html => {:class => "form-control"}, :required => false
              .form-group
                .col-md-12    
                  = f.input :remember_me, as: :boolean, :inline_label => t(:remember_me, scope: "activerecord.attributes.user"), :input_html => {:class => "boolean-control"}, :required => false
            = f.actions do
              .form-group
                .col-md-12
                  = f.action :submit, :label => t(:sign_in), :button_html => {:class => "input btn btn-primary pull-right push-bottom"}

  .col-md-4
    .featured-box.default
      .box-content
        %h4
          Помощь
        %p  
          = link_to t(:forgot_password, scope: 'devise.passwords'), new_password_path(resource_name)
        %p
          = link_to t(:resend_confirmation_instructions, scope: 'devise.confirmations'), new_confirmation_path(resource_name)

        
        
-#  
  -if configatron.auth_providers.to_hash.keys.any?      
    -widget do
      %ul.nav.nav-list
        %li.nav-header= t 'sessions.new.omniauth.header'
        -configatron.auth_providers.to_hash.keys.each do |provider|
          -alt = t('sessions.new.omniauth.button_alt', :provider => provider)
          %li= link_to(image_tag("auth/#{provider.to_s}_64.png", :alt => alt), "/auth/#{provider.to_s}", :title => alt)

