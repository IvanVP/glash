.row
  -if notice
    .alert.alert-success
      %p#notice= notice

  .col-md-3
    %img.img-thumbnail.img-responsive{src: image_path('projects/project-2.jpg') }/
    %hr.visible-sm.visible-xs.tall/
  .col-md-9
    %h2= @user.fullname
    -if @user.show_birthdate
      Родился:&nbsp;
      =@user.birthdate 
    %br/
    -if @user.description
      Немного о себе:&nbsp;
      =@user.description
    %br/
    -if @user.contact.site
      Сайт:&nbsp;
      =link_to @user.contact.site, url_with_protocol(@user.contact.site), :target => '_blank' 
%br/
%br/
