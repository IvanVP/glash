-title "Придумайте название идеи"

.imagesteps{class: "submit_#{step}"}

%h1 Придумайте название идеи

= semantic_form_for @idea, url: wizard_path, :html => {:multipart => true} do |f|

  = f.inputs do
    
    .form-group
      .col-md-12

      = f.input :title, :label => t(:title, scope: "activerecord.attributes.idea"), autofocus: true,  :input_html => {:class => "form-control ", :maxlength => 40}, :required => false, placeholder: "название идеи (не более 40 символов)"
      %br
      = f.input :synopsis, as: :text, :label => t(:synopsis, scope: "activerecord.attributes.idea"), autofocus: true,  :input_html => {:class => "form-control ", :rows => 3, :maxlength => 150}, :required => false, placeholder: "напишите коротко об идее \n(не более 150 символов)"
      %br
      = f.input :category_id, :as => :select, :collection => Hash[Category.all.map{|b| [b.name,b.id]}], :include_blank => false, :label => "Категория", autofocus: true, :input_html => {:class => "form-control"}, :required => false
      %br
      = f.input :problem, as: :text, :label => t(:problem, scope: "activerecord.attributes.idea"), autofocus: true,  :input_html => {:class => "form-control ", :rows => 7, :maxlength => 2500}, :required => false, placeholder: "опишите проблему, при решении которой родилась Ваша идея \n(не более 2500 символов)"
      %br
     

  = f.actions do
    .form-group
      .col-md-12#wizard 
        %br
        = f.submit "Дальше", :class => "input btn btn-primary"
        &nbsp
        &nbsp
        &nbsp
        = link_to "Отмена", ideas_path, :class => "input btn backbtn"
        