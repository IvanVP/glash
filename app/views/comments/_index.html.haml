%h3 Комментарии
%h5 Ваш комментарий
= semantic_form_for [@idea, Comment.new] do |f|
  = f.inputs do
    = f.input :body, as: :text, :label => false, autofocus: true,  :input_html => {:class => "form-control ", :rows => 3, :maxlength => 2500}, :required => false, placeholder: "Текст комментария"
    
  = f.actions do
    = f.action :submit, :label => "Отправить", :button_html => {class: css_for_link}

%br
%ul.comments.reply
  - @comments.each do |comment|
    %li
      .comment
        .img-thumbnail
          %img.avatar{:src => comment.user.avatar.url(:thumb), title: "#{comment.user.fullname}", :alt => "#{comment.user.fullname}"}/
        .comment-block
          .comment-arrow
          %span.comment-by
            %strong=comment.user.fullname
            %span.date.pull-right= l(comment.created_at.to_datetime, :format => :long)
          %p=comment.body



-#
  = image_tag @user.avatar.url(:medium), {class: "img-thumbnail img-responsive avatar", title: "#{@user.fullname}"}
 